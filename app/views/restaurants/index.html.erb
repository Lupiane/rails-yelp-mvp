<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <div class="card">
          <h1 class="text-center">Our restaurants</h1>
          <ul class="list-unstyled" id="restaurant-list">
            <% @restaurants.order(:name).each do |restaurant| %>
              <li>
                <ul class="list-inline">
                  <li><i class="fa fa-cutlery" aria-hidden="true"></i></li>
                  <li><%= link_to restaurant.name, restaurant_path(restaurant) %></li>
                  <li>(<%= restaurant.category.capitalize %>)</li>
                </ul>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <div class="card">
          <h3 class="text-center"><%= link_to "Add a new restaurant to the list", new_restaurant_path %></h3>
        </div>
      </div>
    </div>
  </div>
</div>
